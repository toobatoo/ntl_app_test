{% extends 'base_client.html.twig' %}

{% block meta %}
{{parent()}}
<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}
    
{% block menu %}
    {{ parent() }}
{% endblock %}

    <div class="container content">

        <div class="row content">
        
            <table class="table">
            <tr>
                <td>
                    <strong>Importer un plan d'action</strong>
                </td>
            <tr>
            
                    {% for flashMessage in app.session.flashbag.get('infos') %}

                        {% if flashMessage == 'Erreur importation!' %}
                            <tr>
                                <td>
                                    <div class="alert alert-danger">{{flashMessage}}</div>
                                </td>
                            </tr>
                        {% else  %}
                            <tr>
                                <td>
                                    <div class="alert alert-success">{{flashMessage}}</div>
                                </td>
                            </tr>
                        {% endif %}
                    {% endfor %}
                
        <form action="{{path('client_plan_action_import')}}" method="post" enctype="multipart/form-data">
            <tr>
                <td>
                    <input type="file" name="file" />
                </td>
            </tr>
            <tr>
                <td>
                    <input type="submit" class="btn btn-xs btn-success" value="Enregistrer" style="width:100%;"/>
                </td>
            </tr>
            </table>
        </form>
        <div style="text-align:center;width:100%;">
            <div>
                <img width="3%" src="{{ asset('images/xls.png') }}" />
            </div>
            <div><a href="{{asset('export_public/plan_action.xlsx')}}">Télécharger le plan d'action<a></div>
        </div>
        </div><!-- row navigation-->
    </div><!-- container navigation-->

{% endblock %}

