{% extends 'base_client.html.twig' %}

{% block meta %}
{{parent()}}
<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}
    
{% block menu %}
    {{ parent() }}
{% endblock %}

    <div class="container content">
        <div class="row content">
        <h3 style="display: inline;">Ajouter des tickets</h3>
            <div style="width: 100% !important; overflow: scroll; height: 80vh;">
            <table class="table table-bordered" style="margin-top:20px;">
            <form action="{{path('app_ticket_add_form')}}" method="post" enctype="multipart/form-data">
                <input type="hidden" value="{{month_to_show}}" name="month_to_show" />
                <input type="hidden" value="{{year_to_show}}" name="year_to_show" />
                <tr>
                    <td>Année</td>
                    <td>{{year_to_show}}</td>
                </tr>
                <tr>
                    <td>Mois</td>
                    <td>{{ list_months[ month_to_show ] }}</td>
                </tr>
                <tr>
                    <td>Enquêteur</td>
                    <td>
                        <input type="text" placeholder="N° d'enquêteur" size="15" name="enqueteur" />
                    </td>
                </tr>
                <tr>
                    <td>Photo des tickets au format PDF</td>
                    <td>
                        <input type="file" name="photo" />
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" class="btn btn-xs btn-success" value="Enregistrer" style="width:100%;"/>
                    </td>
                </tr>
            </form>
            </table>
            </div>
        </div><!-- row navigation-->
    </div><!-- container navigation-->

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('js/client/ticket_add.js') }}"></script>
{% endblock %}