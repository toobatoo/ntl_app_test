{% extends 'base_client.html.twig' %}

{% block meta %}
{{parent()}}
<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}
    
{% block menu %}
    {{ parent() }}
{% endblock %}

    <div class="container content">

        <div class="row content">
        <form  action="{{path('client_compte_rendu_add_import_update')}}" method="post" enctype="multipart/form-data">
            <input type="hidden" name="date" value="{{date}}" />
            <input type="hidden" name="id" value="{{id}}" />
            
            <table class="table">
            <tr>
                <td>
                    <strong>Ajouter un compte rendu de réunion</strong>
                </td>
            <tr>
            <tr>
                <td>Date de réunion: </td>
                <td>{{date}}</td>
            </tr>
            <tr>
                <td>Importer un fichier pour le compte rendu </td>
                <td>
                    <input type="file" name="cr" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" class="btn btn-xs btn-success" value="Enregistrer" style="width:100%;"/>
                </td>
            </tr>
            </table>
        </form>
        </div><!-- row navigation-->
    </div><!-- container navigation-->

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('js/client/compte_rendu.js') }}"></script>
{% endblock %}