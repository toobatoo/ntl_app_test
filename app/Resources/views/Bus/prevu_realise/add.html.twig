{% extends 'base_bus.html.twig' %}

{% block meta %}
{{parent()}}
<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}
    
{% block menu %}
    {{ parent() }}
{% endblock %}

    <div class="container content">

        <div class="row content">
        <form  action="{{path('bus_prevu_realise_add_import')}}" method="post" enctype="multipart/form-data">
            <table class="table">
            <tr>
                <td>
                    <strong>Ajouter un planning BUS</strong>
                </td>
            <tr>
            <tr>
                <td>Saisir la date d'ajout:</td>
                <td>
                    <input type="text" placeholder="Au format jj/mm/aaaa" name="date" />
                </td>
            </tr>
            <tr>
                <td>Importer un fichier pour le planning</td>
                <td>
                    <input type="file" name="file" />
                </td>
            </tr>
            <tr>
                <td>
                    <label for="extension">Le fichier contient-il l'extension xlsm?</label>
                    <input type="radio" name="extension" value="xlsm" checked> Oui
                    <input type="radio" name="extension" value=""> Non
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" class="btn btn-xs btn-success" value="Enregistrer" style="width:100%;"/>
                </td>
            </tr>
            </table>
        </form>
        </div><!-- row navigation-->
    </div><!-- container navigation-->

{% endblock %}
