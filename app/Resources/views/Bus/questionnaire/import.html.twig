{% extends 'base_bus.html.twig' %}

{% block metas %}
    <meta http-equiv="cache-control" content="max-age=0" />
    <meta http-equiv="cache-control" content="no-cache" />
    <meta http-equiv="expires" content="0" />
    <meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
    <meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}

{% block menu %}
    {{ parent() }}
{% endblock %}
    
     <div class="container content">

            {% for message in app.session.flashbag.get('infos') %}
                <div class="alert alert-info" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            
            <div class="jumbotron">
                
                <H3>Importer une liste de mesure sous format Excel</H3>
                    <form method="post" class="form" action="{{path('bus_questionnaire_import')}}" enctype="multipart/form-data" >
                        <table>
                            <tr>
                                <td><input type="file" name="fiches" /></td>
                            </tr>
                            <tr>
                                <td style="padding-top:30px;"><span type="button" class="btn btn-xs btn-success"> Envoyer</span></td>
                            </tr>
                        </table>
                    </form>
            </div>
        
    </div><!-- container navigation-->


{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/bus/fiches/import.js') }}"></script>
{% endblock %}