{% extends 'base_bus.html.twig' %}

{% block meta %}
{{parent()}}
<meta http-equiv="cache-control" content="max-age=0" />
<meta http-equiv="cache-control" content="no-cache" />
<meta http-equiv="expires" content="0" />
<meta http-equiv="expires" content="Tue, 01 Jan 1980 1:00:00 GMT" />
<meta http-equiv="pragma" content="no-cache" />
{% endblock %}

{% block body %}
    
{% block menu %}
    {{ parent() }}
{% endblock %}

    <div class="container content">

        <div class="row content">
            <table class="table table-striped table-bordered">
            <tr>
                <td colspan="2">
                    <strong>Re-initialisation des mesures BUS</strong>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <span class="text-warning"><strong>*</strong></span> Choisir un mois à historiciser
                </td>
            </tr>
            <tr>
                <td style="text-align:center;">
                    <select class="mois">
                        <option value="-">Sélectionner un mois</option>
                        <option value="1">Janvier</option>
                        <option value="2">Février</option>
                        <option value="3">Mars</option>
                        <option value="4">Avril</option>
                        <option value="5">Mai</option>
                        <option value="6">Juin</option>
                        <option value="7">Juillet</option>
                        <option value="8">Août</option>
                        <option value="9">Septembre</option>
                        <option value="10">Octobre</option>
                        <option value="11">Novembre</option>
                        <option value="12">Décembre</option>
                    </select>
                </td>
                <td style="text-align:center;">
                    <select class="annee">
                        <option value="-">Sélectionner une année</option>
                        <option value="{{ "now"|date("Y") }}">{{ "now"|date("Y") }}</option>
                        <option value="{{ "now"|date("Y") -1 }}">{{ "now"|date("Y") -1 }}</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <span class="btn btn-xs btn-primary valid" style="width:100%;">Valider</span>
                </td>
            </tr>
            </table>
            <div>
                <span class="text-warning">
                    <strong>*</strong>Cette action permet de conserver le mois sélectionné et de libérer de l'espace en base de données.
                </span>
            </div>
        </div><!-- row navigation-->
    </div><!-- container navigation-->

{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{ asset('js/bus/mesure.reset/index.js') }}"></script>
{% endblock %}